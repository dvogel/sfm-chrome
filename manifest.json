{
  "manifest_version": 2,
  "name": "Churnalism",
  "version": "0.9.13",
  "description": "Check news articles for press release influence.",
  "background": {
    "page": "html/background.html"
  },
  "options_page": "html/options.html",
  "page_action" :
  {
    "default_icon" : "img/searching.png",
    "default_title" : "Checking for churnalism!"
  },
  "icons": {
             "16": "img/churnalism_128x128.png",
             "48": "img/churnalism_48x48.png",
            "128": "img/churnalism_128x128.png"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "web_accessible_resources": ["html/loadingwait.html"],
  "permissions": [
    "webNavigation",
    "tabs", 
    "http://*/*",
    "https://*/*"
  ],
  "update_url": "https://s3.amazonaws.com/churnalism.sunlightfoundation.com/chromeext/updates.xml"
}
